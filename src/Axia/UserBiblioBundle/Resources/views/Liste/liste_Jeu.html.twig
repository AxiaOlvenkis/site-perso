<div>
    {% set i = 0 %}
    {% for biblio in liste %}
    {% set element = biblio|get_item %}
    {% if i == 0 %}
    <div class="row aff_elements">
        {% endif %}
        <div class="col-sm-4 bloc-index text-center">
            <p class="text-success text-capitalize text-center text-title">
                <a href="{{ element.fiche }}" target="_blank">{{ element.titre }}</a>
            </p>
            <p>{{ 'element.editer'|trans }}
                {{ element.editeurs|lst_editor|raw }}
            </p>
            {% if element.dateParution is not null %}
                <p>{{ element.dateParution|date('d M Y')|get_parution|raw }}</p>
            {% else %}
                <p>date de parution non renseign√©e</p>
            {% endif %}
            <p class="note">{{ biblio.note|getNote|raw }}</p>
            <p class="LuPossede" id="{{ biblio.id }}">
                <b>Possede</b> :
                <button class="Possede">{{ biblio.possede|getChecked|raw }}</button>
            </p>
            {% set i = i + 1 %}
            {% if i == 3 %}
        </div>
        {% set i = 0 %}
        {% endif %}
    </div>
    {% endfor %}
    {% if i != 0 %}
        </div>
    {% endif %}
</div>
{% if is_granted("ROLE_ADMIN") %}
    <script src="{{ asset('bundles/axiauserbiblio/modif.js') }}"></script>
{% endif %}