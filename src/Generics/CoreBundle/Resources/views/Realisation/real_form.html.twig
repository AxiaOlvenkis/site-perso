<script src="{{ asset('js/ckeditor_admin/ckeditor.js') }}" type="text/javascript"></script>
<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {{ form_label(form.titre, "Titre de la réalisation", {'label_attr': {'class': 'control-label'}}) }}
      {{ form_errors(form.titre) }}
      <div class="">
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.lien, "Lien vers la réalisation (si site web)", {'label_attr': {'class': 'control-label'}}) }}
      {{ form_errors(form.titre) }}
      <div class="">
        {{ form_widget(form.lien, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.image, "Image d'illustration", {'label_attr': {'class': 'control-label'}}) }}
      {{ form_errors(form.titre) }}
      <div class="">
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}
      {{ form_errors(form.titre) }}
      <div class="">
        {{ form_widget(form.description, {'attr': {'class': 'ckeditor'}}) }}
      </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default">
    </div>

    {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>