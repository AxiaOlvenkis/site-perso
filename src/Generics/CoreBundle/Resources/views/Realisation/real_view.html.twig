{% extends "::base_admin.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block page_content %}
	<p><a href="{{ path('generics_admin_homepage') }}" class="btn btn-info"><b> &#x2190; </b>{{ 'admin.retour'|trans }}</a>
		<a href="{{ path('admin_add_real') }}" class="btn btn-success">{{ 'real.titre.add'|trans }}</a></p>
	<hr />
	<table class='table table-bordered table-striped' id="real_table">
		<thead>
			<tr>
				<th style="text-align:center;background-color:white;color: black; height:30px;">{{ 'realisation.titre'|trans }}</th>
				<th style="text-align:center;background-color:white;color: black; height:30px;">{{ 'realisation.lien'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for real in listRea %}
				<tr>
					<td style="width:35%">{{ real.titre }}</td>
					<td style="width:35%">{{ real.lien }}</td>
					<td>
						<a href="{{ path('admin_edit_real', {'id': real.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
						<a href="{{ path('admin_delete_real', {'id': real.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<hr />
	<p>
		<a href="{{ path('generics_admin_homepage') }}" class="btn btn-info"><b> &#x2190; </b> {{ 'admin.retour'|trans }}</a>
		<a href="{{ path('admin_add_real') }}" class="btn btn-success">{{ 'real.titre.add'|trans }}</a>
	</p>
	<script>
		$(document).ready(function(){
			load_datatables('#real_table');
		});
	</script>
{% endblock %}