{% extends "::base.html.twig" %}

{% block title %}
  {{ 'contact.titre.ajout'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
<script src='https://www.google.com/recaptcha/api.js'></script>
  <h2>{{ 'contact.titre.ajout'|trans }}</h2>
  <p> {{ 'contact.message'|trans }}</p>
  <script src="{{ asset('js/ckeditor_com/ckeditor.js') }}" type="text/javascript"></script>
	<div class="well">
	  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	    {# Les erreurs générales du formulaire. #}
	    {{ form_errors(form) }}

	    <div class="form-group">
	      {{ form_label(form.nom, "Votre nom :", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.nom) }}
	      <div class="">
	        {{ form_widget(form.nom, {'attr': {'class': 'form-control string_contact'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.mail, "Votre email (non obligatoire) :", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.mail) }}
	      <div class="">
	        {{ form_widget(form.mail, {'attr': {'class': 'form-control string_contact'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.sujet, "Objet du message :", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.sujet) }}
	      <div class="">
	        {{ form_widget(form.sujet, {'attr': {'class': 'form-control string_contact'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.texte, "Texte", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.texte) }}
	      <div class="">
	        {{ form_widget(form.texte, {'attr': {'class': 'ckeditor'}}) }}
	      </div>
	    </div>
	    <div class="g-recaptcha" data-sitekey="6LcGKd0SAAAAAHjoZnAc3h3jwO4r6dpzb4uiJZFM"></div>

	  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
		<input type="submit" class="btn btn-default">

	    {# Génération automatique des champs pas encore écrits.
	     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
	     et tous les champs cachés (type « hidden »). #}
	  {{ form_rest(form) }}
	  
	  {# Fermeture de la balise <form> du formulaire HTML #}
	  {{ form_end(form) }}
	</div>
{% endblock %}