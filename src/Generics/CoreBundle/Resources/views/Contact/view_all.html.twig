{% extends "::base_admin.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block page_content %}
	<p><a href="{{ path('generics_admin_homepage') }}" class="btn btn-info"><b> &#x2190; </b> {{ 'admin.retour'|trans }}</a>
	<hr />
	<table class="table table-stiped table-bordered" id="messages_table">
		<thead>
			<tr>
				<th style="text-align:center;background-color:white;color: black; height:30px;">{{ 'admin.message.nom'|trans }}</th>
				<th style="text-align:center;background-color:white;color: black; height:30px;">{{ 'admin.message.sujet'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for message in listContact %}
				<tr>
					<td>{{ message.nom }}</td>
					<td>{{ message.sujet }}</td>
					<td>
						<a href="{{ path('core_contact_view_message', {'id': message.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
						<a href="{{ path('core_contact_delete', {'id': message.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<hr />
	<p>
	<a href="{{ path('generics_admin_homepage') }}" class="btn btn-info">
		<b> &#x2190; </b> {{ 'admin.retour'|trans }}
	</a>
	<script>
		$(document).ready(function(){
			load_datatables('#messages_table');
		});
	</script>
{% endblock %}