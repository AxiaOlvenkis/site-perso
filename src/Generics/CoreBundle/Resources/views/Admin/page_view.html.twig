{% extends "::base_admin.html.twig" %}

{% block page_content %}
	<p><a href="{{path('admin_add_page')}}" class="btn btn-danger">{{ 'page.titre.add'|trans }}</a></p>
	<table class='table table-bordered table-striped' id="pages_table">
		<thead>
			<tr>
				<th>{{ 'page.nom'|trans }}</th>
				<th>{{ 'page.id'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for page in listPages %}
				<tr>
					<td>{{ page.titre }}</td>
					<td>{{ page.link }}</td>
					<td>
						<a href="{{path('admin_edit_page', {'id': page.id})}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
						<a href="{{path('admin_delete_page', {'id': page.id})}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<script>
		$(document).ready(function(){
			load_datatables('#pages_table');
		});
	</script>
{% endblock %}