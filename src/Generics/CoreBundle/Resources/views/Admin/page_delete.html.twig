{% extends "::base_admin.html.twig" %}

{% block title %}
  {{ 'page.titre.delete'|trans }} - {{ parent() }}
{% endblock %}

{% block page_content %}

  <h2>{{ 'page.titre.delete'|trans }}</h2>

  <p>
    Etes-vous certain de vouloir supprimer cette page : "{{ page.titre }}" ?
  </p>

  <form action="{{ path('admin_delete_page', {'id': page.id}) }}" method="post">
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}